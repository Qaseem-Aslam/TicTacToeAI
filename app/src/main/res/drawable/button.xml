<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <solid android:color="#f0f0f0"/>

            <stroke
                android:width="1dp"
                android:color="#f0f0f0" />
            <padding
                android:bottom="2dp"
                android:top="2dp"
                android:right="2dp"
                android:left="2dp" />
        </shape>
        <corners android:radius="10dp"/>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#f0f0f0"/>

            <stroke
                android:width="1dp"
                android:color="#f0f0f0" />
            <padding
                android:bottom="2dp"
                android:top="2dp"
                android:right="2dp"
                android:left="2dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0000ff"/>
            <stroke
                android:width="1dp"
                android:color="#0000ff" />
            <padding
                android:bottom="2dp"
                android:top="2dp"
                android:right="2dp"
                android:left="2dp" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>